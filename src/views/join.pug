extends base 

block content
    form(method="POST")
        if errorMessage
            span=errorMessage
        input(name="name",placeholder="Name", type="text", reqired )
        input(name="email",placeholder="E-mail", type="text", reqired )
        input(name="username",placeholder="username", type="text", reqired )
        input(name="password",placeholder="password", type="password", reqired )
        input(name="password2",placeholder="Confirm password", type="password", reqired )
        input(name="location",placeholder="location", type="text", reqired )
        input(type="submit" value="Join")
        include partials/social-login
    div.auth-switch
        span Don't have an account? 
        a(href="/join") Create one now &rarr;